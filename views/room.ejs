                </div>
                <canvas id="can" width="800" height="400" >   
                </canvas>
            </div>
<!-- ------------------------------------------------END OF WHITEBOARD DIV--------------------------------------------------------------------------------------------- -->

<!-- ------------------------------------------------START OF NOTES-TAKER DIV--------------------------------------------------------------------------------------------- -->

            <div id="my-notes" style="display:none">
